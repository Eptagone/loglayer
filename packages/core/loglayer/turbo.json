{
  "$schema": "https://turbo.build/schema.json",
  "extends": [
    "//"
  ],
  "tasks": {
    "clean": {},
    "test": {
      "inputs": [
        "*.ts",
        "src/**",
        "*.json"
      ]
    },
    "lint": {
      "inputs": [
        "*.ts",
        "src/**",
        "*.json"
      ]
    },
    "verify-types": {
      "inputs": [
        "*.ts",
        "src/**",
        "*.json"
      ]
    },
    "build": {
      "dependsOn": [
        "@internal/tsconfig#build",
        "@loglayer/context-manager#build",
        "@loglayer/plugin#build",
        "@loglayer/shared#build",
        "@loglayer/transport#build"
      ],
      "inputs": [
        "src/**",
        "*.json"
      ],
      "outputs": [
        "dist/**"
      ]
    }
  }
}
